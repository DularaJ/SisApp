<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".ShowStudentsActivity">

    <!-- 1. AppBarLayout to properly contain the toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 2. The corrected MaterialToolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Students"
            app:menu="@menu/menu_students"
            style="@style/Widget.MaterialComponents.Toolbar.PrimarySurface" />
        <!--
        The "style" attribute is the key fix. It tells the toolbar:
        - Use '?attr/colorPrimary' for the background.
        - Use '?attr/colorOnPrimary' for the title and menu icons.
        This automatically handles light/dark modes.
        -->

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 3. RecyclerView that scrolls underneath the toolbar -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
